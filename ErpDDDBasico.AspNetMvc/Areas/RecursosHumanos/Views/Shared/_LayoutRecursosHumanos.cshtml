<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erp Basic - Vendas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary navbar-light">
            <div class="container">
                @Html.ActionLink("ERP Basic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item home">
                            @Html.ActionLink("Inicio", "Index", "Home", new { area = "RecursosHumanos" }, new { @class = "nav-link" })<span class="sr-only">(current)</span>
                        </li>
                        <li class="nav-item funcionarios dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Funcionário
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Cadastrar", "CadastrarFuncionario", "Home", new { area = "RecursosHumanos" }, new { @class = "nav-link" })
                                @Html.ActionLink("Listagem", "BuscarTodosFuncionarios", "Home", new { area = "RecursosHumanos" }, new { @class = "nav-link" })
                            </div>
                        </li>
                        <li class="nav-item pagamentos dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Pagamentos
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Realizar Pagamento", "RealizarPagamento", "Home", new { area = "RecursosHumanos" }, new { @class = "nav-link" })
                                @Html.ActionLink("Histórico", "HistoricoPagamentos", "Home", new { area = "RecursosHumanos" }, new { @class = "nav-link" })
                            </div>
                        </li>
                        <li class="nav-item">@Html.ActionLink("Sair", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Erp Basic</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $('.money').mask('000.000.000.000.000,00', { reverse: true });

            var menu = '@TempData["Menu"]';
            if (menu == 'home' || menu == null || menu == '') {
                $(".home").addClass("active");
            }
            else if (menu == 'funcionarios') {
                $(".funcionarios").addClass("active");
            }
            else {
                $(".pagamentos").addClass("active");
            }
        });
    </script>
</body>
</html>
