
@{
    Layout = "~/Areas/Vendas/Views/Shared/_LayoutVendas.cshtml";
}
<h1>
    Área Vendas
</h1>
Ultimas 5 Vendas
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Valor Unitário</th>
            <th>Valor do Desconto</th>
            <th>Valor do Final</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Vendas)
        {
            foreach (var pedido in item.ListaPedidoDetalhe)
            {
                <tr>
                    <td>@item.Cliente.Nome</td>
                    <td>@pedido.ProdutoModel.Nome</td>
                    <td>@pedido.ValorUnitario</td>
                    <td>
                        @{
                            if (pedido.ValorDesconto == null)
                            {
                                @:-
                            }
                            else
                            {
                                @: @pedido.ValorDesconto
                            }
                        }
                    </td>
                    <td>@pedido.ValorFinal</td>
                </tr>
            }
        }
    </tbody>
</table>