@model ErpDDDBasico.AspNetMvc.Models.UsuarioModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.UsuarioLogin, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.TextBoxFor(model => model.UsuarioLogin, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UsuarioLogin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.UsuarioSenha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.PasswordFor(model => model.UsuarioSenha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UsuarioSenha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Entrar" class="btn btn-secondary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>